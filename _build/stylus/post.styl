body {
    background: #F5F5F5;
}

.post {
    margin: 20px 0;
    padding: 20px 50px;
    border-radius: 3px;
    box-shadow: 0 1px 3px rgba(0,0,0,.02), 0 4px 8px rgba(0,0,0,.02);
    background: #FFF;

    h1, h2, h3, h4, h5, h6 {
        margin-top: 16px;
        margin-bottom: 16px;
        font-weight: bold;
        line-height: 1.4;
    }

    h1 {
        padding-bottom: 0.3em;
        font-size: 2.25em;
        line-height: 1.2;
        border-bottom: 1px solid #EEE;
    }

    h2 {
        padding-bottom: 0.3em;
        font-size: 1.75em;
        line-height: 1.225;
        border-bottom: 1px solid #EEE;
    }

    li {
        margin-bottom: 8px;
    }

    .highlighter-rouge {
        font-family: Consolas, "Microsoft YaHei", "Liberation Mono", Courier, monospace;

        border: 1px solid #DFE2E5;
        border-radius: 3px;

        background-color: #F8F8F8;

        padding: 2px 4px;
        font-size: 0.9em;

        pre {
            font-family: inherit;
            margin: 0;
            padding: 6px 10px;
        }
    }

    code {
        font-family: inherit;
        font-size: 14px;
        line-height: 1.5;

        .nt {
            color: #170;
        }

        .c {
            color: #AAA;
        }

        .na {
            color: #00C;
        }

        .s, .s1 {
            color: #A11;
        }
    }
}