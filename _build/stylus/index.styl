body {
    background: #F5F5F5;
}

.post-list {
    display: flex;
    padding: 0;
    list-style: none;
}

.post {
    border-radius: 3px;
    background: #FFF;
    box-shadow: 0 1px 3px rgba(0,0,0,.02), 0 4px 8px rgba(0,0,0,.02);
    overflow: hidden;
    transition: all 0.3s;

    &:hover {
        transform: translateY(-2px);
    }

    header {
        padding: 0 20px;
        color: #FFF;
        text-align: center;
        overflow: hidden;
    }

    footer {
        padding: 0 20px;
        font-size: 12px;
        color: #AAA;
    }

    .title {
        font-size: 18px;
        font-weight: 700;
    }

    .introduction {
        font-size: 13px;
    }

    a {
        display: block;
        text-decoration: none;
    }
}